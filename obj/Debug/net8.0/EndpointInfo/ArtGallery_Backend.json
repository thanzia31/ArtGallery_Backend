  "components": {
    "schemas": {
      "ArtDTO": {
        "required": [
          "artistId",
          "categoryId",
          "description",
          "image",
          "mode",
          "title"
        ],
        "type": "object",
        "properties": {
          "artistId": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "minLength": 1,
            "type": "string"
          },
          "description": {
            "minLength": 1,
            "type": "string"
          },
          "categoryId": {
            "type": "integer",
            "format": "int32"
          },
          "mode": {
            "minLength": 1,
            "type": "string"
          },
          "image": {
            "type": "string",
            "format": "byte"
          }
        },
        "additionalProperties": false
      },
      "GalleryDTO": {
        "required": [
          "artId",
          "galleryId",
          "galleryName"
        ],
        "type": "object",
        "properties": {
          "galleryId": {
            "type": "integer",
            "format": "int32"
          },
          "artId": {
            "type": "integer",
            "format": "int32"
          },
          "galleryName": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "LoginDTO": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "SetPasswordDTO": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UserDTO": {
        "required": [
          "email",
          "firstName",
          "lastName",
          "roleId"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "minLength": 1,
            "type": "string"
          },
          "lastName": {
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string"
          },
          "roleId": {
            "type": "integer",
            "format": "int32"
